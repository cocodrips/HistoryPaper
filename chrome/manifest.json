{
    "manifest_version": 2,

    "name": "HistoryPaper / Dev",
    "description": "historypaper",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "libs/tiny_segmenter.js",
                "libs/stopwords.js",
                "model/utils.js",
                "model/content-object.js",
                "model/content.js"
                ]
        }
    ],
    "background": {
        "script":["view/background.js"]
    },
    "permissions": [
        "history",
        "storage",
        "unlimitedStorage",
        "http://*/*",
        "https://*/*",
        "http://fonts.googleapis.com/*",
        "http://cocodrips.hateblo.jp/*"
    ]
}
