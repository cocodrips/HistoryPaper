{
    "manifest_version": 2,

    "name": "HistoryPaper / Chica",
    "description": "historypaper",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["script/key.js", "libs/tiny_segmenter.js", "script/content.js"]
        }
    ],
    "permissions": [
        "history",
        "http://*/*",
        "https://*/*",
        "http://fonts.googleapis.com/*",
        "http://cocodrips.com/*",
        "http://cocodrips.hateblo.jp/*"
    ]
}
